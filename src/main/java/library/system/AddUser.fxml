<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="library.system.AddUserController"
            alignment="TOP_LEFT"
            hgap="10"
            vgap="10"
            stylesheets="@Login.css">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text id="addUserMessage"
            text="Add User To Library"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.columnSpan="2"/>

    <Label text="First Name"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
    />
    <TextField fx:id="userFirstNameTextEntry"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"/>

    <Label text="Surname"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
    />

    <TextField fx:id="userLastNameTextEntry"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"/>

    <Label text="Password / PIN"
           GridPane.columnIndex="0"
           GridPane.rowIndex="3"
    />

    <TextField fx:id="passwordPINTextEntry"
                GridPane.columnIndex="1"
                GridPane.rowIndex="3"/>

    <Label text="Supervisor"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4"
    />

    <TextField fx:id="userSupervisorTextEntry"
                GridPane.columnIndex="1"
                GridPane.rowIndex="4"/>

   <HBox spacing="10"
            GridPane.columnIndex="1"
            GridPane.rowIndex="9"
            GridPane.columnSpan="1"
    >

    <Button fx:id="submitbutton"
            prefWidth="200"
            prefHeight="60"
            text="Add User"
            onAction="#addUserToDBButtonAction"
    />
   </HBox>

     <HBox spacing="10"
           GridPane.columnIndex="1"
           GridPane.rowIndex="10"
           GridPane.columnSpan="1"
     >

     <Button fx:id="homeScreenButton"
            prefWidth="200"
            prefHeight="60"
            text="Return To Homescreen"
            onAction="#homeScreenButtonAction"/>

     </HBox>

     <HBox spacing="10"
           alignment="BOTTOM_LEFT"
           GridPane.columnIndex="0"
           GridPane.rowIndex="20">

         <Button fx:id="logoutButton"
                 prefWidth="200"
                 prefHeight="60"
                 text="Exit Program"
                 onAction="#logoutButtonAction"
         />

     </HBox>


</GridPane>
