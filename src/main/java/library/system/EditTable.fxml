<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="library.system.EditTableController"
          alignment="TOP_LEFT"
          hgap="10"
          vgap="10"
          stylesheets="@Login.css">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text id="editTableMessage"
          text="Edit Table In Library"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label fx:id="editTable"
           text="Table Number"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label text="Table Size"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <Label text="Number of Players"
           GridPane.columnIndex="0"
           GridPane.rowIndex="3"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>

    <Label text="Quantity Available"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="4"/>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="9"
          GridPane.columnSpan="1"
    >
        <Button fx:id="addBookButton"
                text="Add Book"
                onAction="#addBookButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="9"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editBookButton"
                text="Edit Book"
                onAction="#editBookButtonAction"
        />
    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="10"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addMusicButton"
                text="Add Music"
                onAction="#addMusicButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="10"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editMusicButton"
                text="Edit Music"
                onAction="#editMusicButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="11"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addGamesButton"
                text="Add Games"
                onAction="#addGamesButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="11"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editGamesButton"
                text="Edit Games"
                onAction="#editGamesButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="12"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addFilmButton"
                text="Add Film"
                onAction="#addFilmButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="12"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editFilmButton"
                text="Edit Film"
                onAction="#editFilmButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="13"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addTableButton"
                text="Add Table"
                onAction="#addTableButtonAction"
        />

    </HBox>

</GridPane>