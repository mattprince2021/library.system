<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="library.system.EditBoardgamesController"
          hgap="10"
          vgap="10"
          stylesheets="@Login.css">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text id="editBoardgamesMessage"
          text="Edit Boardgames In Library"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label fx:id="editBoardgames"
           text="Author"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label text="Genre"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <Label text="Ages"
           GridPane.columnIndex="0"
           GridPane.rowIndex="3"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>

    <Label text="Min Players"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="4"/>

    <Label text="Overview"
           GridPane.columnIndex="0"
           GridPane.rowIndex="5"
           GridPane.valignment="TOP"
    />

    <TextArea GridPane.columnIndex="1"
              GridPane.rowIndex="5"
              GridPane.hgrow="ALWAYS"
    />


    <Label text="Barcode"
           GridPane.columnIndex="0"
           GridPane.rowIndex="6"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="6"/>

    <Label text="Quantity Available"
           GridPane.columnIndex="0"
           GridPane.rowIndex="7"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="7"/>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="9"
          GridPane.columnSpan="1"
    >
        <Button fx:id="addBookButton"
                text="Add Book"
                onAction="#addBookButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="9"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editBookButton"
                text="Edit Book"
                onAction="#editBookButtonAction"
        />
    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="10"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addMusicButton"
                text="Add Music"
                onAction="#addMusicButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="10"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editMusicButton"
                text="Edit Music"
                onAction="#editMusicButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="11"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addBoardgamesButton"
                text="Add Boardgames"
                onAction="#addBoardgamesButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="12"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addFilmButton"
                text="Add Film"
                onAction="#addFilmButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="12"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editFilmButton"
                text="Edit Film"
                onAction="#editFilmButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="13"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addTableButton"
                text="Add Table"
                onAction="#addTableButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="2"
          GridPane.rowIndex="13"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editTableButton"
                text="Edit Table"
                onAction="#editTableButtonAction"
        />

    </HBox>

</GridPane>