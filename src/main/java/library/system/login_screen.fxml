<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="library.system.LoginScreenController"
          vgap="10"
          hgap="10"
          alignment="TOP_LEFT"
          stylesheets="@Login.css"

            >
    <padding><Insets top="25" bottom="25" left="25" right="25" /></padding>

    <!-- Widgets -->

    <Text id="welcome-text"
          text="Welcome to the Prince Library"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Username: "
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"/>

    <TextField fx:id="userNameEntry"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label text="PIN: "
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"/>

    <TextField fx:id="pinField"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <HBox spacing="10"
          alignment="BOTTOM_RIGHT"
          GridPane.columnIndex="1"
          GridPane.rowIndex="4">

        <Button fx:id="loginButton"
                text="Sign In"
                onAction="#loginButtonAction"
        />

    </HBox>

    <Text fx:id="actionTarget"
          GridPane.columnIndex="1"
          GridPane.rowIndex="6"/>


</GridPane>
