<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="library.system.HomeScreenController"
          alignment="TOP_LEFT"
          hgap="10"
          vgap="10"
          stylesheets="@Login.css">

    <padding><Insets top="25" bottom="25" right="25" left="25" /></padding>

    <Text id="welcome-text"
          text="Welcome to the Prince Library"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <HBox spacing="10"
          GridPane.columnIndex="0"
          GridPane.rowIndex="1"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addBookButton"
                text="Add Book"
                onAction="#addBookButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="1"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editBookButton"
                text="Edit Book"
                onAction="#editBookButtonAction"
        />
    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="0"
          GridPane.rowIndex="2"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addMusicButton"
                text="Add Music"
                onAction="#addMusicButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="2"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editMusicButton"
                text="Edit Music"
                onAction="#editMusicButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="0"
          GridPane.rowIndex="4"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addGamesButton"
                text="Add Games"
                onAction="#addGamesButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="4"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editGamesButton"
                text="Edit Games"
                onAction="#editGamesButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="0"
          GridPane.rowIndex="3"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addFilmButton"
                text="Add Film"
                onAction="#addFilmButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="3"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editFilmButton"
                text="Edit Film"
                onAction="#editFilmButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="0"
          GridPane.rowIndex="5"
          GridPane.columnSpan="1"
    >

        <Button fx:id="addTableButton"
                text="Add Table"
                onAction="#addTableButtonAction"
        />

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="5"
          GridPane.columnSpan="1"
    >

        <Button fx:id="editTableButton"
                text="Edit Table"
                onAction="#editTableButtonAction"
        />

    </HBox>
</GridPane>