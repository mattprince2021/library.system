<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="library.system.HomeScreenController"
          alignment="TOP_LEFT"
          hgap="10"
          vgap="10"
          stylesheets="@Login.css">

    <padding><Insets top="25" bottom="25" right="25" left="25" /></padding>
    <!--    <gridLinesVisible>true</gridLinesVisible>-->

    <!-- Widgets here -->
    <Text id="welcome-text"
          text="Welcome to the Cinema System"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Button fx:id="addBookButton"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            GridPane.columnSpan="1"
            onAction="#addBookButtonAction"
    />

    <Button text="Edit Book"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"/>

    <Button text="Add Music"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"/>

    <Button text="Edit Music"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"/>
</GridPane>