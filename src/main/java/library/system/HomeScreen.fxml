<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<GridPane alignment="TOP_LEFT"
    hgap="10"
    prefHeight="697.0"
    prefWidth="994.0"
    stylesheets="@Login.css"
    vgap="10"
    xmlns="http://javafx.com/javafx/19"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="library.system.HomeScreenController">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <Text id="welcome-text"
        text="Welcome to the Prince Library"
        GridPane.columnIndex="1"
        GridPane.columnSpan="3" />

    <HBox spacing="10"
        GridPane.columnIndex="1"
        GridPane.columnSpan="1"
        GridPane.rowIndex="1">

        <Button fx:id="addBookButton"
            onAction="#addBookButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Add Book" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="2"
        GridPane.columnSpan="1"
        GridPane.rowIndex="1">

        <Button fx:id="editBookButton"
            onAction="#editBookButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Edit Book" />
    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="1"
        GridPane.columnSpan="1"
        GridPane.rowIndex="2">

        <Button fx:id="addMusicButton"
            onAction="#addMusicButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Add Music" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="2"
        GridPane.columnSpan="1"
        GridPane.rowIndex="2">

        <Button fx:id="editMusicButton"
            onAction="#editMusicButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Edit Music" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="1"
        GridPane.columnSpan="1"
        GridPane.rowIndex="4">

        <Button fx:id="addGamesButton"
            onAction="#addGamesButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Add Games" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="2"
        GridPane.columnSpan="1"
        GridPane.rowIndex="4">

        <Button fx:id="editGamesButton"
            onAction="#editGamesButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Edit Games" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="1"
        GridPane.columnSpan="1"
        GridPane.rowIndex="3">

        <Button fx:id="addFilmButton"
            onAction="#addFilmButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Add Film" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="2"
        GridPane.columnSpan="1"
        GridPane.rowIndex="3">

        <Button fx:id="editFilmButton"
            onAction="#editFilmButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Edit Film" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="1"
        GridPane.columnSpan="1"
        GridPane.rowIndex="5">

        <Button fx:id="addTableButton"
            onAction="#addTableButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Add Table" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="2"
        GridPane.columnSpan="1"
        GridPane.rowIndex="5">

        <Button fx:id="editTableButton"
            onAction="#editTableButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Edit Table" />

    </HBox>

    <HBox spacing="10"
        GridPane.columnIndex="1"
        GridPane.columnSpan="1"
        GridPane.rowIndex="6">

        <Button fx:id="addUserButton"
            onAction="#addUserButtonAction"
            prefHeight="24.0"
            prefWidth="98.0"
            text="Add User" />

    </HBox>

    <HBox alignment="BOTTOM_LEFT"
        spacing="10"
        GridPane.columnIndex="1"
        GridPane.rowIndex="20">

        <Button fx:id="logoutButton"
            onAction="#logoutButtonAction"
            prefHeight="60"
            prefWidth="98.0"
            text="Exit Program" />

    </HBox>

</GridPane>
