<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="library.system.AddGamesController"
          alignment="TOP_LEFT"
          hgap="10"
          vgap="10"
          stylesheets="@Login.css">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text id="addGamesMessage"
          text="Add Games to Library"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Title"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"
    />

    <TextField fx:id="gamesTitleTextEntry"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"/>

    <Label text="Genre"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"
    />

    <TextField fx:id="gamesGenreTextEntry"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"/>

    <Label text="Ages"
           GridPane.columnIndex="0"
           GridPane.rowIndex="3"
    />

    <TextField fx:id="gamesAgesTextEntry"
            GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>

    <Label text="Min Players"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4"
    />

    <TextField fx:id="gamesMinPlayersTextEntry"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"/>

    <Label text="Overview"
           GridPane.columnIndex="0"
           GridPane.rowIndex="5"
           GridPane.valignment="TOP"
    />

    <TextArea fx:id="gamesOverviewTextEntry"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            GridPane.hgrow="ALWAYS"
    />

    <Label text="Barcode"
            GridPane.columnIndex="0"
            GridPane.rowIndex="6"
    />

    <TextField fx:id="gamesBarcodeTextEntry"
            GridPane.columnIndex="1"
               GridPane.rowIndex="6"/>

    <Label text="Quantity Available"
           GridPane.columnIndex="0"
           GridPane.rowIndex="7"
    />

    <TextField fx:id="gamesQuantityTextEntry"
            GridPane.columnIndex="1"
               GridPane.rowIndex="7"/>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="9"
          GridPane.columnSpan="1"
    >

    <Button fx:id="homeScreenButton"
            prefWidth="200"
            prefHeight="60"
            text="Return To Homescreen"
            onAction="#homeScreenButtonAction"/>

    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="8"
          GridPane.columnSpan="1"
    >

    <Button fx:id="submitbutton"
            prefWidth="200"
            prefHeight="60"
            text="Submit Games"
            onAction="#addGamesToDBButtonAction"
    />
    </HBox>

</GridPane>
