<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="library.system.EditMusicController"
          alignment="TOP_LEFT"
          hgap="10"
          vgap="10"
          stylesheets="@Login.css">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text id="editMusicMessage"
          text="Edit Music In Library"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label fx:id="editMusic"
           text="Artist"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label text="Title"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <Label text="Genre"
           GridPane.columnIndex="0"
           GridPane.rowIndex="3"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>

    <Label text="Format"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="4"/>

    <Label text="Overview"
           GridPane.columnIndex="0"
           GridPane.rowIndex="5"
           GridPane.valignment="TOP"
    />

    <TextArea GridPane.columnIndex="1"
              GridPane.rowIndex="5"
              GridPane.hgrow="ALWAYS"
    />

    <Label text="Barcode"
           GridPane.columnIndex="0"
           GridPane.rowIndex="6"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="6"/>

    <Label text="Quantity Available"
           GridPane.columnIndex="0"
           GridPane.rowIndex="7"
    />

    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="7"/>

</GridPane>
